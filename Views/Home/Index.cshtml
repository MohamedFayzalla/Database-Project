
@model SystemUser
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
  

    <form asp-action="LogIn" method="post">
        <div class="form-group">
            <label asp-for="Username">Username</label>
            <input asp-for="Username" class="form-control"  aria-describedby="emailHelp" placeholder="Enter username">
           <span asp-validation-for="Username" class="test-danger"></span>
            <small id="emailHelp" class="form-text text-muted">We'll never share your information with anyone else.TRUST US:)</small>
        </div>

        <div class="form-group">
            <label asp-for="Password">Password</label>
            <input type="password" asp-for="Password" class="form-control" placeholder="Password">
            <span asp-validation-for="Password" class"test-danger"></span>
        </div>
       
        <BR>
        <button type="submit" class="btn btn-primary">LOG IN</button>
    </form>

</div>


@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

