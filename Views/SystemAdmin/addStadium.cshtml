@model Stadium
@{
    ViewData["Title"] = "addStadium";
}

<h1>addStadium</h1>


@if (TempData["failed"] != null)
{
    <h2>@TempData["failed"]</h2>
}


<form asp-controller="SystemAdmin" asp-action="addStadium" method="post">


    <div class="form-group">
        <label asp-for="Name">name of Stadium</label>
        <input asp-for="Name" class="form-control"  placeholder="Enter Stadiun name">
        <span asp-validation-for="Name" class"test-danger"></span>

    </div>




    <div class="form-group">
        <label asp-for="Location">location of Stadium</label>
        <input asp-for="Location" class="form-control" placeholder="location">
    </div>



    <div class="form-group">
        <label asp-for="Capacity">Capcity of Stadium</label>
        <input asp-for="Capacity" class="form-control" placeholder="Capacity">
    </div>



    <button type="submit" class="btn btn-primary">Submit</button>
</form>



@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }
    }

