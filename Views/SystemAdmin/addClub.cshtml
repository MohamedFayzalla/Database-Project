@model Club
@{
    ViewData["Title"] = "addClub";
}

<h1>addClub</h1>

@if (TempData["failed"] != null)
{
    <h2>@TempData["failed"]</h2>
}


<form asp-controller="SystemAdmin" asp-action="addClub" method="post">


    <div class="form-group">
        <label asp-for="Name">name of club</label>
        <input asp-for="Name" class="form-control" aria-describedby="emailHelp" placeholder="Enter Club name">
        <span asp-validation-for="Name" class"test-danger"></span>
       
    </div>




    <div class="form-group">
        <label asp-for="Location">location of club</label>
        <input asp-for="Location" class="form-control" placeholder="location">
    </div>


    <button type="submit" class="btn btn-primary">Submit</button>
</form>



@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }
    }

