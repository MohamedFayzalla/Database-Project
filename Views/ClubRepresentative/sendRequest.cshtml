
@{
    ViewData["Title"] = "sendRequest";
}

<h1>sendRequest</h1>


@if (TempData["failed"] != null)
{
    <h2>@TempData["failed"]</h2>
}


@using (Html.BeginForm("sendRequest", "ClubRepresentative"))
{




    <div class="form-group">
        <label>STADIUM NAME</label>
        <input type="text" name="stadiumNAME" class="form-control" placeholder="NAME">
    </div>


    <div class="form-group">
        <label>DATE</label>
        <input type="datetime-local" name="time" class="form-control" placeholder="DATE">
    </div>



    <br>

    <button type="submit" class="btn btn-primary">Submit</button>

}



@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }
    }


