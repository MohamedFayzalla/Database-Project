
@{
    ViewData["Title"] = "ClubRepresentative";
}

<h1>ClubRepresentative</h1>


@if (TempData["failed"] != null)
{
    <h2>@TempData["failed"]</h2>
}


@using (Html.BeginForm("ClubRepresentative", "SignUp"))
{

    <div class="form-group">
        <label>Username</label>
        <input class="form-control" name="username" placeholder="Enter username">

        <small id="emailHelp" class="form-text text-muted">We'll never share your information with anyone else.TRUST US:)</small>
    </div>




    <div class="form-group">
        <label>Password</label>
        <input class="form-control" name="password" placeholder="password">
    </div>






    <div class="form-group">
        <label>Your Name</label>
        <input class="form-control" name="name" placeholder="name">
    </div>



    <div class="form-group">
        <label>Existing Club Name</label>
        <input class="form-control" name="clubName" placeholder="Club Name">
    </div>










    <br>
    <button type="submit" class="btn btn-primary">Register</button>







}

@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }
    }